<%= form_for @company, url: admin_company_path(@company) do |f| %>
  <div class="form-group">
    <%= f.text_field :name %>
    <div class="col-md-4">
      <%= f.label :name   %>
    </div>
  </div>

  <div class="form-group">
    <%= f.collection_select :industries, Industry.all, :id,:name %>
    <div class="col-md-4">
      <%= f.label :industry %>
    </div>
  </div>

  <div class="form-group">
    <%= select_tag :size, options_for_select(company_size) %>
    <div class="col-md-4">
      <%= f.label :size %>
    </div>
  </div>

  <div class="form-group">
    <%= f.text_field :website %>
    <div class="col-md-4">
      <%= f.label :website %>
    </div>
  </div>

  <div class="form-group">
    <%= f.text_field :products_services %>
    <div class="col-md-4">
      <%= f.label :products_services %>
    </div>
  </div>
  <%= f.submit %>

<% end %>
