<div id="sidebar-wrapper">
  <ul class="sidebar-nav">
    <li class="sidebar-brand">
        <h2>Filters</h2>
    </li>
    <div class="form-group" id='size-options'>
      <li>
        <%= label_tag :size, "Number of Employees" %>
      </li>
      <li>
        <%= check_box_tag :company_size %>
        <%= h "At most X employees" %>
      </li>
      <li>
        <%= select_tag :sizes, options_for_select(company_size), class: "dropdown", style: "display:none" %>
      </li>
    </div>
    <div class="form-group" id='industry-options'>
      <li>
        <%= label_tag :industry %>
      </li>
      <% @industries.each do |industry| %>
        <li>
          <%= check_box_tag 'industry_ids[]', industry.name -%>
          <%= h industry.name -%>
        </li>
      <% end %>
    </div>
  </ul>
</div>
